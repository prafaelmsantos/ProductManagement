@model Client
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewData["Subtitle"] = "Atualização do Cliente";
    }
    else
    {
        ViewData["Subtitle"] = "Registo de Cliente";
    }
}

<h1 class="text-primary">@ViewData["Subtitle"]</h1>
<hr>

<form asp-action="Create" class="row mt-5">
    <input type="hidden" asp-for="@Model.UserId">

    <div class="form-group col-lg-7">
        <label asp-for="@Model.Name">Nome:</label><br>
        <input asp-for="@Model.Name" class="form-control">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-2">
        <label asp-for="@Model.BirthDate">Data Nascimento:</label><br>
        <input asp-for="@Model.BirthDate" class="form-control" type="date">
        <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-3">
        <label asp-for="@Model.NIF">NIF:</label><br>
        <input asp-for="@Model.NIF" class="form-control">
        <span asp-validation-for="@Model.NIF" class="text-danger"></span>
    </div>

    <div class="w-100"></div>
    <div class="form-group col-lg-7">
        <label asp-for="@Model.Email">E-mail:</label><br>
        <input asp-for="@Model.Email" class="form-control" type="email">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="form-group col-lg-5">
        <label asp-for="@Model.Phone">Telemovel:</label><br>
        <input asp-for="@Model.Phone" class="form-control" type="number">
        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
    </div>

    @if (!Context.Request.RouteValues.ContainsKey("id"))
    {
        <div class="w-100"></div>
        <div class="form-group col-sm-8 col-lg-4">
            <label asp-for="@Model.Password">Password:</label><br>
            <input asp-for="@Model.Password" class="form-control" type="password">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    }

    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-8 mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Guardar</button>
    </div>
</form>