@model IEnumerable<Category>
@{
    ViewData["Subtitle"] = "Lista de Categorias";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewData["Subtitle"]</h1>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
    </div>
</header>
<hr>

<partial name="_Message">

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-categorias">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Create" asp-route-id="@category.CategoryId"
                           class="btn btn-sm btn-secondary">Atualizar</a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma categoria encontrada.</p>
}